# Flutter Portfolio Makefile
# Quick commands for building and deploying the portfolio

.PHONY: help build-web deploy-web clean dev analyze

# Default target
help:
	@echo "ğŸ“± Flutter Portfolio Build Commands"
	@echo "=================================="
	@echo ""
	@echo "Available commands:"
	@echo "  make build-web    ğŸš€ Build Flutter web app for production"
	@echo "  make deploy-web   ğŸŒ Build and prepare for deployment"
	@echo "  make dev          ğŸ› ï¸  Run development server"
	@echo "  make analyze      ğŸ” Run code analysis"
	@echo "  make clean        ğŸ§¹ Clean build files"
	@echo "  make help         â“ Show this help message"

# Build web app for production
build-web:
	@echo "ğŸš€ Building Flutter Web Portfolio..."
	@flutter build web --release
	@echo "âœ… Build completed!"

# Build and deploy to web directory
deploy-web:
	@echo "ğŸš€ Building and deploying Flutter Web Portfolio..."
	@flutter build web --release
	@echo "ğŸ§¹ Cleaning target web directory..."
	@rm -rf ../web/*
	@echo "ğŸ“‚ Copying build files to web directory..."
	@cp -r build/web/* ../web/
	@echo "âœ… Deployment completed!"
	@echo "ğŸ“ Web files are now in: ../web/"
	@echo "ğŸŒ Ready for hosting!"

# Run development server
dev:
	@echo "ğŸ› ï¸ Starting development server..."
	@flutter run -d web-server --web-port 3000

# Run code analysis
analyze:
	@echo "ğŸ” Running code analysis..."
	@dart analyze

# Clean build files
clean:
	@echo "ğŸ§¹ Cleaning build files..."
	@flutter clean
	@rm -rf ../web/*
	@echo "âœ… Clean completed!"

# Install dependencies
deps:
	@echo "ğŸ“¦ Installing dependencies..."
	@flutter pub get
	@echo "âœ… Dependencies installed!" 